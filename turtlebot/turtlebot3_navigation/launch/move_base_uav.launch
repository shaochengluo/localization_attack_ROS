<launch>
  <!-- Arguments -->
  <arg name="model" default="uav" doc="model type [burger, waffle, waffle_pi, uav]"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <!-- The odom below is the one in tf, NOT any rostopic -->
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find turtlebot3_navigation)/param2/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find turtlebot3_navigation)/param2/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find turtlebot3_navigation)/param2/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find turtlebot3_navigation)/param2/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find turtlebot3_navigation)/param2/move_base_params.yaml" command="load" />
    <rosparam file="$(find turtlebot3_navigation)/param2/global_planner_params.yaml" command="load" />
    <rosparam file="$(find turtlebot3_navigation)/param2/dwa_local_planner_params_$(arg model).yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.1" if="$(arg move_forward_only)" />
  </node>
</launch>
